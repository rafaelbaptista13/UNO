<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp"
    android:layout_marginHorizontal="10dp"
    app:strokeColor="@color/primary_text"
    app:strokeWidth="3dp"
    android:layout_marginVertical="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/activity_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:text="1."
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/activity_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.12"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/activity_number"
            android:layout_marginStart="15dp"
            android:src="@drawable/video_icon" />

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Como se deve respirar?"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/activity_image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/activity_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="VÃ­deo"
            app:layout_constraintTop_toBottomOf="@id/activity_title"
            app:layout_constraintLeft_toRightOf="@+id/activity_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="15dp"
            android:textSize="15sp"
            android:textColor="@color/primary_text"
            android:layout_marginVertical="10dp"/>

        <ImageView
            android:id="@+id/completed_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/completed_icon"
            app:layout_constraintTop_toBottomOf="@+id/activity_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>